@{
    Layout = "/Views/DashboardAdmin/LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Dashboard Toko Sepatu</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->


    <section class="section dashboard">
        <div class="row">
            <!-- Summary Cards -->
            <div class="col-lg-8">
                <div class="row">
                    <!-- Revenue Card -->
                    <div class="col-xxl-4 col-md-6">
                        <div class="card info-card revenue-card">
                            <div class="card-body">
                                <h5 class="card-title">Revenue <span>| Today</span></h5>
                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-currency-dollar"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>$1,264</h6>
                                        <span class="text-success small pt-1 fw-bold">12%</span> <span class="text-muted small pt-2 ps-1">increase</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Customers Card -->
                    <div class="col-xxl-4 col-md-6">
                        <div class="card info-card customers-card">
                            <div class="card-body">
                                <h5 class="card-title">Customers <span>| This Month</span></h5>
                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-people"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>1,244</h6>
                                        <span class="text-success small pt-1 fw-bold">8%</span> <span class="text-muted small pt-2 ps-1">increase</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sales Card -->
                    <div class="col-xxl-4 col-md-6">
                        <div class="card info-card sales-card">
                            <div class="card-body">
                                <h5 class="card-title">Sales <span>| Today</span></h5>
                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-cart"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>145</h6>
                                        <span class="text-success small pt-1 fw-bold">6%</span> <span class="text-muted small pt-2 ps-1">increase</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Sales -->
                <div class="col-12">
                    <div class="card recent-sales">
                        <div class="card-body">
                            <h5 class="card-title">Recent Sales <span>| Today</span></h5>
                            <div class="table-responsive">
                                <table class="table table-borderless datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">Order ID</th>
                                            <th scope="col">Customer</th>
                                            <th scope="col">Product</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>#2457</td>
                                            <td>Brandon Jacob</td>
                                            <td>Premium Jacket</td>
                                            <td>$64</td>
                                            <td><span class="badge bg-success">Delivered</span></td>
                                        </tr>
                                        <tr>
                                            <td>#2147</td>
                                            <td>Bridie Kessler</td>
                                            <td>Classic Jeans</td>
                                            <td>$47</td>
                                            <td><span class="badge bg-warning">Pending</span></td>
                                        </tr>
                                        <tr>
                                            <td>#2049</td>
                                            <td>Ashleigh Langosh</td>
                                            <td>Sport Shoes</td>
                                            <td>$89</td>
                                            <td><span class="badge bg-success">Delivered</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Sidebar -->
            <div class="col-lg-4">
                <!-- Top Selling Products -->
                <div class="card top-selling">
                    <div class="card-body pb-0">
                        <h5 class="card-title">Top Selling <span>| This Month</span></h5>
                        <div class="activity">
                            <div class="activity-item d-flex">
                                <div class="activite-label">124 sold</div>
                                <i class='bi bi-circle-fill activity-badge text-primary align-self-start'></i>
                                <div class="activity-content">
                                    <a href="#" class="fw-bold text-dark">Premium Jacket</a>
                                    <span class="text-muted">$64.00</span>
                                </div>
                            </div>

                            <div class="activity-item d-flex">
                                <div class="activite-label">98 sold</div>
                                <i class='bi bi-circle-fill activity-badge text-info align-self-start'></i>
                                <div class="activity-content">
                                    <a href="#" class="fw-bold text-dark">Classic Jeans</a>
                                    <span class="text-muted">$47.00</span>
                                </div>
                            </div>

                            <div class="activity-item d-flex">
                                <div class="activite-label">76 sold</div>
                                <i class='bi bi-circle-fill activity-badge text-success align-self-start'></i>
                                <div class="activity-content">
                                    <a href="#" class="fw-bold text-dark">Sport Shoes</a>
                                    <span class="text-muted">$89.00</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Stats -->
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Quick Stats</h5>
                        <div class="stats-grid">
                            <div class="stat-item">
                                <i class="bi bi-bag-check"></i>
                                <div>
                                    <span>Orders</span>
                                    <h6>350</h6>
                                </div>
                            </div>
                            <div class="stat-item">
                                <i class="bi bi-currency-dollar"></i>
                                <div>
                                    <span>Revenue</span>
                                    <h6>$5,000</h6>
                                </div>
                            </div>
                            <div class="stat-item">
                                <i class="bi bi-person-plus"></i>
                                <div>
                                    <span>New Users</span>
                                    <h6>15</h6>
                                </div>
                            </div>
                            <div class="stat-item">
                                <i class="bi bi-star"></i>
                                <div>
                                    <span>Top Product</span>
                                    <h6>Premium Jacket</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    :root {
        --primary: #4154f1;
        --primary-light: #f6f6fe;
        --secondary: #717ff5;
        --success: #2eca6a;
        --warning: #ffc107;
        --danger: #ff4d4f;
        --dark: #212529;
        --light: #f8f9fa;
        --text: #444444;
        --text-muted: #6c757d;
        --border: #e9ecef;
        --shadow: 0 2px 20px rgba(0, 0, 0, 0.08);
    }

    .main {
        background-color: #f6f9ff;
        padding: 20px;
    }

    .pagetitle {
        margin-bottom: 30px;
    }

        .pagetitle h1 {
            font-size: 2rem;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

    .breadcrumb {
        background-color: transparent;
        padding: 0;
    }

    .breadcrumb-item a {
        color: var(--text-muted);
        text-decoration: none;
    }

    .breadcrumb-item.active {
        color: var(--primary);
    }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: var(--shadow);
        margin-bottom: 24px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

    .card-body {
        padding: 1.5rem;
    }

    .card-title {
        color: var(--dark);
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

        .card-title span {
            color: var(--text-muted);
            font-size: 0.9rem;
            font-weight: 400;
        }

    .info-card {
        border-left: 4px solid var(--primary);
    }

        .info-card .card-icon {
            font-size: 1.5rem;
            color: var(--primary);
            background-color: var(--primary-light);
            width: 50px;
            height: 50px;
        }

        .info-card h6 {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 0.25rem;
        }

    .recent-sales {
        background-color: white;
    }

        .recent-sales table {
            color: var(--text);
        }

        .recent-sales th {
            font-weight: 600;
            color: var(--dark);
        }

    .badge {
        font-weight: 500;
        padding: 0.35em 0.65em;
    }

    .top-selling .activity {
        padding-left: 1rem;
    }

    .activity-item {
        position: relative;
        padding-bottom: 1.5rem;
        border-left: 1px solid var(--border);
    }

        .activity-item:last-child {
            border-left: 0;
            padding-bottom: 0;
        }

        .activity-item::before {
            content: '';
            position: absolute;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            left: -6px;
            top: 0;
            background: var(--primary);
        }

    .activite-label {
        color: var(--text-muted);
        font-size: 0.75rem;
        min-width: 60px;
    }

    .activity-content {
        padding-left: 1rem;
    }

        .activity-content a {
            font-weight: 600;
            color: var(--dark);
            text-decoration: none;
        }

        .activity-content span {
            display: block;
            color: var(--text-muted);
            font-size: 0.85rem;
        }

    .stats-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .stat-item {
        display: flex;
        align-items: center;
        padding: 0.75rem;
        background-color: var(--light);
        border-radius: 8px;
    }

        .stat-item i {
            font-size: 1.25rem;
            color: var(--primary);
            margin-right: 0.75rem;
        }

        .stat-item span {
            display: block;
            font-size: 0.75rem;
            color: var(--text-muted);
        }

        .stat-item h6 {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 0;
            color: var(--dark);
        }

    @@media (max-width: 992px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }
    }
</style>