@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top Up Saldo - Shoes Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap');

        * {
            font-family: 'Poppins', sans-serif;
        }

        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .shoe-pattern {
            background-image: radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.15) 0%, transparent 50%), radial-gradient(circle at 40% 40%, rgba(120, 219, 255, 0.1) 0%, transparent 50%);
        }

        .float-animation {
            animation: float 6s ease-in-out infinite;
        }

        .float-delay-1 {
            animation-delay: -2s;
        }

        .float-delay-2 {
            animation-delay: -4s;
        }

        .float-delay-3 {
            animation-delay: -6s;
        }

        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0px) rotate(0deg);
        }

        50% {
            transform: translateY(-20px) rotate(5deg);
        }

        }

        .fade-in-up {
            animation: fadeInUp 1.2s ease-out;
        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .glass-effect {
            backdrop-filter: blur(20px);
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .input-focus {
            transition: all 0.3s ease;
        }

            .input-focus:focus {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
            }

        .topup-container {
            animation: containerSlide 1.5s ease-out;
        }

        @@keyframes containerSlide {
            from

        {
            opacity: 0;
            transform: scale(0.9) rotateY(10deg);
        }

        to {
            opacity: 1;
            transform: scale(1) rotateY(0deg);
        }

        }

        .coin-spin {
            animation: coinSpin 2s linear infinite;
        }

        @@keyframes coinSpin {
            0%

        {
            transform: rotateY(0deg);
        }

        100% {
            transform: rotateY(360deg);
        }

        }

        .topup-btn {
            background: linear-gradient(45deg, #10b981, #059669);
            transition: all 0.3s ease;
        }

            .topup-btn:hover {
                background: linear-gradient(45deg, #059669, #047857);
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(16, 185, 129, 0.4);
            }

            .topup-btn:disabled {
                background: linear-gradient(45deg, #6b7280, #4b5563);
                cursor: not-allowed;
                transform: none;
                box-shadow: none;
            }
    </style>
</head>

<body class="gradient-bg shoe-pattern min-h-screen flex items-center justify-center p-4 relative overflow-hidden">

    <!-- Floating Elements -->
    <div class="absolute top-20 left-10 float-animation">
        <i class="fas fa-coins text-white text-4xl opacity-20"></i>
    </div>
    <div class="absolute bottom-32 right-16 float-animation float-delay-1">
        <i class="fas fa-credit-card text-white text-3xl opacity-25"></i>
    </div>
    <div class="absolute top-1/2 left-20 float-animation float-delay-2">
        <i class="fas fa-wallet text-white text-2xl opacity-30"></i>
    </div>
    <div class="absolute top-32 right-32 float-animation float-delay-3">
        <i class="fas fa-money-bill-wave text-white text-2xl opacity-20"></i>
    </div>
    <div class="absolute bottom-20 left-1/3 float-animation">
        <i class="fas fa-dollar-sign text-white text-3xl opacity-15"></i>
    </div>

    <!-- Main TopUp Container -->
    <div class="w-full max-w-md mx-auto">
        <div class="glass-effect p-8 rounded-3xl shadow-2xl topup-container">

            <!-- Header -->
            <div class="text-center mb-8 fade-in-up">
                <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-green-400 to-green-600 rounded-full mb-4 coin-spin">
                    <i class="fas fa-wallet text-white text-3xl"></i>
                </div>
                <div class="text-3xl font-bold bg-gradient-to-r from-white to-green-200 bg-clip-text text-transparent mb-2 drop-shadow-2xl">
                    <i class="fas fa-plus-circle mr-2 text-green-300"></i>Top Up Saldo
                </div>
                <p class="text-white font-medium drop-shadow-lg">Add funds to your wallet</p>
            </div>

            <!-- Top Up Form -->
            <form class="space-y-6 fade-in-up" id="topupForm">

                <!-- Amount Input -->
                <div>
                    <label class="block text-white text-lg font-semibold mb-4 drop-shadow-lg">
                        <i class="fas fa-money-bill-wave mr-2"></i>Enter Amount
                    </label>
                    <div class="relative">
                        <span class="absolute left-4 top-1/2 transform -translate-y-1/2 text-white font-semibold">Rp</span>
                        <input type="number"
                               id="topupAmount"
                               name="topupAmount"
                               placeholder="10,000"
                               min="10000"
                               step="1000"
                               class="w-full pl-12 pr-4 py-4 bg-gray-800 bg-opacity-80 border border-gray-600 rounded-xl text-white placeholder-gray-300 focus:outline-none focus:border-green-400 focus:bg-opacity-90 input-focus shadow-lg text-lg font-semibold">
                    </div>
                    <p class="text-white opacity-70 text-sm mt-2">
                        <i class="fas fa-info-circle mr-1"></i>
                        Minimum top up amount is Rp 10,000
                    </p>
                </div>

                <!-- Current Balance Info -->
                <div class="glass-effect p-4 rounded-xl border border-green-500 border-opacity-50">
                    <div class="flex items-center justify-between text-white">
                        <div class="flex items-center">
                            <i class="fas fa-wallet text-green-400 mr-2"></i>
                            <span class="font-medium">Current Balance:</span>
                        </div>
                        <span class="font-bold text-green-300" id="currentBalance">Rp 2,450,000</span>
                    </div>
                </div>

                <!-- Top Up Button -->
                <button type="submit"
                        id="topupSubmitBtn"
                        disabled
                        class="w-full topup-btn text-white py-4 rounded-xl font-bold text-lg relative shadow-xl disabled:opacity-50">
                    <span id="topupText">
                        <i class="fas fa-plus mr-2"></i>Top Up Saldo
                    </span>
                    <div id="topupSpinner" class="hidden">
                        <i class="fas fa-spinner fa-spin mr-2"></i>Processing...
                    </div>
                </button>
            </form>

            <!-- Security Notice -->
            <div class="mt-6 pt-4 border-t border-white border-opacity-30 fade-in-up">
                <div class="text-center">
                    <div class="flex items-center justify-center text-white opacity-80 text-sm">
                        <i class="fas fa-shield-alt text-green-400 mr-2"></i>
                        <span>Secure transaction with SSL encryption</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    <div id="messageContainer" class="fixed top-4 right-4 z-50"></div>

    <script>
        const topupAmount = document.getElementById('topupAmount');
        const submitBtn = document.getElementById('topupSubmitBtn');
        const topupText = document.getElementById('topupText');
        const topupSpinner = document.getElementById('topupSpinner');
        const messageContainer = document.getElementById('messageContainer');
        const currentBalance = document.getElementById('currentBalance');

        // Enable/disable button based on input
        topupAmount.addEventListener('input', function() {
            const amount = parseInt(this.value);
            if (amount >= 10000) {
                submitBtn.disabled = false;
                submitBtn.classList.remove('opacity-50');
            } else {
                submitBtn.disabled = true;
                submitBtn.classList.add('opacity-50');
            }
        });

        // Format number input
        topupAmount.addEventListener('blur', function() {
            const amount = parseInt(this.value);
            if (amount && amount >= 10000) {
                this.value = amount.toLocaleString('id-ID');
            }
        });

        topupAmount.addEventListener('focus', function() {
            this.value = this.value.replace(/\./g, '');
        });

        // Handle form submission
        document.getElementById('topupForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const amount = parseInt(topupAmount.value.replace(/\./g, ''));

            if (amount >= 10000) {
                // Show loading state
                topupText.classList.add('hidden');
                topupSpinner.classList.remove('hidden');
                submitBtn.disabled = true;

                // Simulate processing
                setTimeout(() => {
                    // Hide loading state
                    topupText.classList.remove('hidden');
                    topupSpinner.classList.add('hidden');
                    submitBtn.disabled = false;

                    // Update balance (simulate)
                    const currentBalanceValue = 2450000 + amount;
                    currentBalance.textContent = formatRupiah(currentBalanceValue);

                    // Show success message
                    showMessage('success', `Successfully topped up ${formatRupiah(amount)}!`);

                    // Reset form
                    topupAmount.value = '';
                    submitBtn.disabled = true;
                    submitBtn.classList.add('opacity-50');
                }, 2000);
            }
        });

        // Format rupiah
        function formatRupiah(amount) {
            return new Intl.NumberFormat('id-ID', {
                style: 'currency',
                currency: 'IDR',
                minimumFractionDigits: 0
            }).format(amount);
        }

        // Show message
        function showMessage(type, message) {
            const messageDiv = document.createElement('div');
            const bgColor = type === 'success' ? 'bg-green-500' : 'bg-red-500';

            messageDiv.className = `${bgColor} text-white px-6 py-3 rounded-lg shadow-lg mb-2 opacity-0 transform translate-x-full transition-all duration-300`;
            messageDiv.innerHTML = `
                <div class="flex items-center">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} mr-2"></i>
                    <span>${message}</span>
                </div>
            `;

            messageContainer.appendChild(messageDiv);

            // Animate in
            setTimeout(() => {
                messageDiv.classList.remove('opacity-0', 'translate-x-full');
            }, 100);

            // Remove after 3 seconds
            setTimeout(() => {
                messageDiv.classList.add('opacity-0', 'translate-x-full');
                setTimeout(() => {
                    messageContainer.removeChild(messageDiv);
                }, 300);
            }, 3000);
        }
    </script>
</body>
</html>