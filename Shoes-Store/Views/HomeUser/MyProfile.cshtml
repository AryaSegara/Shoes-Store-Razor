@using Shoes_Store.Models.DTO;
@model UserProfileDTO;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile - Shoes Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap');

        * {
            font-family: 'Poppins', sans-serif;
        }

        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .shoe-pattern {
            background-image: radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.15) 0%, transparent 50%), radial-gradient(circle at 40% 40%, rgba(120, 219, 255, 0.1) 0%, transparent 50%);
        }

        .float-animation {
            animation: float 6s ease-in-out infinite;
        }

        .float-delay-1 {
            animation-delay: -2s;
        }

        .float-delay-2 {
            animation-delay: -4s;
        }

        .float-delay-3 {
            animation-delay: -6s;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(5deg);
            }
        }

        .slide-in-left {
            animation: slideInLeft 1s ease-out;
        }

        .slide-in-right {
            animation: slideInRight 1s ease-out;
        }

        .fade-in-up {
            animation: fadeInUp 1.2s ease-out;
        }

        .fade-in-down {
            animation: fadeInDown 1s ease-out;
        }

        @@keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-100px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(100px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .glass-effect {
            backdrop-filter: blur(20px);
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .input-focus {
            transition: all 0.3s ease;
        }

            .input-focus:focus {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
            }

        .btn-hover {
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .btn-hover::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
                transition: left 0.5s;
            }

            .btn-hover:hover::before {
                left: 100%;
            }

            .btn-hover:hover {
                transform: translateY(-2px);
                box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
            }

        .profile-container {
            animation: containerSlide 1.5s ease-out;
        }

        @@keyframes containerSlide {
            from {
                opacity: 0;
                transform: scale(0.9) rotateY(10deg);
            }

            to {
                opacity: 1;
                transform: scale(1) rotateY(0deg);
            }
        }

        .profile-avatar {
            position: relative;
            overflow: hidden;
        }

            .profile-avatar::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: conic-gradient(from 0deg, transparent, rgba(99, 102, 241, 0.1), transparent);
                animation: rotate 15s linear infinite;
            }

        @@keyframes rotate {
            to {
                transform: rotate(360deg);
            }
        }

        .wave {
            animation: wave 2s ease-in-out infinite;
        }

        @@keyframes wave {
            0%, 100% {
                transform: rotate(0deg);
            }

            25% {
                transform: rotate(20deg);
            }

            75% {
                transform: rotate(-20deg);
            }
        }

        .file-input-wrapper {
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .file-input-wrapper:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
            }

        .file-input {
            position: absolute;
            opacity: 0;
            width: 100%;
            height: 100%;
            cursor: pointer;
        }

        .image-preview {
            transition: all 0.3s ease;
        }

            .image-preview:hover {
                transform: scale(1.02);
            }

        .balance-glow {
            animation: balanceGlow 3s ease-in-out infinite;
        }

        @@keyframes balanceGlow {
            0%, 100% {
                box-shadow: 0 0 20px rgba(34, 197, 94, 0.3);
            }

            50% {
                box-shadow: 0 0 30px rgba(34, 197, 94, 0.5);
            }
        }

        .coin-spin {
            animation: coinSpin 2s linear infinite;
        }

        @@keyframes coinSpin {
            0% {
                transform: rotateY(0deg);
            }

            100% {
                transform: rotateY(360deg);
            }
        }

        .balance-number {
            background: linear-gradient(45deg, #10b981, #34d399);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: balanceShimmer 2s ease-in-out infinite;
        }

        @@keyframes balanceShimmer {
            0%, 100% {
                filter: brightness(1);
            }

            50% {
                filter: brightness(1.2);
            }
        }

        .top-up-btn {
            background: linear-gradient(45deg, #10b981, #059669);
            transition: all 0.3s ease;
        }

            .top-up-btn:hover {
                background: linear-gradient(45deg, #059669, #047857);
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(16, 185, 129, 0.4);
            }

        .withdraw-btn {
            background: linear-gradient(45deg, #f59e0b, #d97706);
            transition: all 0.3s ease;
        }

            .withdraw-btn:hover {
                background: linear-gradient(45deg, #d97706, #b45309);
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(245, 158, 11, 0.4);
            }
    </style>
</head>

<body class="gradient-bg shoe-pattern min-h-screen flex items-center justify-center p-4 relative overflow-x-hidden overflow-y-auto">

    <!-- Floating Elements -->
    <div class="absolute top-20 left-10 float-animation">
        <i class="fas fa-shoe-prints text-white text-4xl opacity-20"></i>
    </div>
    <div class="absolute bottom-32 right-16 float-animation float-delay-1">
        <i class="fas fa-running text-white text-3xl opacity-25"></i>
    </div>
    <div class="absolute top-1/2 left-20 float-animation float-delay-2">
        <i class="fas fa-shoe-prints text-white text-2xl opacity-30"></i>
    </div>
    <div class="absolute top-32 right-32 float-animation float-delay-3">
        <i class="fas fa-socks text-white text-2xl opacity-20"></i>
    </div>
    <div class="absolute bottom-20 left-1/3 float-animation">
        <i class="fas fa-shoe-prints text-white text-3xl opacity-15"></i>
    </div>

    <!-- Back Button -->
    <a href="/HomeUser/ListProduct" class="absolute top-6 left-6 glass-effect text-white px-4 py-2 rounded-full hover:shadow-lg transition-all duration-300 fade-in-down">
        <i class="fas fa-arrow-left mr-2"></i>Back to Store
    </a>

    <!-- Main Profile Container -->
    <div class="w-full max-w-6xl mx-auto my-8 px-4">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 items-start min-h-[80vh]">

            <!-- Left Side - Profile Picture & Info -->
            <div class="text-center slide-in-left space-y-6">
                <!-- Profile Info -->
                <div class="glass-effect p-6 rounded-3xl shadow-2xl profile-container">

                    <!-- Profile Picture Section -->
                    <div class="profile-avatar relative mb-6">
                        <div class="relative z-10">
                            <div class="w-32 h-32 mx-auto rounded-full bg-gradient-to-br from-indigo-100 to-purple-100 flex items-center justify-center image-preview overflow-hidden border-4 border-white border-opacity-30">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Model.ImageUrl" alt="@Model.Name" class="w-full h-full object-cover">

                                }
                                else
                                {
                                    <img src="/images/default-product.png.jpeg" alt="Profile Picture" class="profile-pic" id="profile-pic">
                                }
                            </div>
                        </div>
                    </div>

                    <!-- User Welcome -->
                    <div class="mb-6">
                        <h1 class="text-2xl font-bold text-white mb-2">
                            Welcome Back! <span class="wave inline-block">👋</span>
                        </h1>
                        <p class="text-white opacity-90 text-sm">
                            @Model.Email
                        </p>
                    </div>

                    <!-- Quick Stats -->
                    <div class="grid grid-cols-2 gap-3 mb-6">
                        <div class="glass-effect p-3 rounded-xl text-center">
                            <div class="text-xl font-bold text-white">0</div>
                            <div class="text-white opacity-80 text-xs">Orders</div>
                        </div>
                        <div class="glass-effect p-3 rounded-xl text-center">
                            <div class="text-xl font-bold text-white">0</div>
                            <div class="text-white opacity-80 text-xs">Wishlist</div>
                        </div>
                    </div>

                    <!-- Profile Actions -->
                    <div class="space-y-3">
                        <button class="w-full glass-effect text-white py-2 px-4 rounded-xl hover:shadow-lg transition-all duration-300 text-sm">
                            <i class="fas fa-shopping-bag mr-2"></i>My Orders
                        </button>
                        <button class="w-full glass-effect text-white py-2 px-4 rounded-xl hover:shadow-lg transition-all duration-300 text-sm">
                            <i class="fas fa-heart mr-2"></i>Wishlist
                        </button>
                        <button class="w-full glass-effect text-white py-2 px-4 rounded-xl hover:shadow-lg transition-all duration-300 text-sm">
                            <i class="fas fa-cog mr-2"></i>Settings
                        </button>
                    </div>
                </div>

                <!-- Balance/Wallet Section -->
                <div class="glass-effect p-6 rounded-3xl shadow-2xl profile-container balance-glow">
                    <div class="text-center">
                        <!-- Wallet Header -->
                        <div class="mb-4">
                            <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-green-400 to-green-600 rounded-full mb-3 coin-spin">
                                <i class="fas fa-wallet text-white text-2xl"></i>
                            </div>
                            <h2 class="text-lg font-bold text-white mb-1">My Wallet</h2>
                            <p class="text-white opacity-70 text-xs">Available Balance</p>
                        </div>

                        <!-- Balance Display -->
                        @* <div class="mb-6">
                            <div class="balance-number text-3xl font-bold mb-1" id="balanceAmount">
                                
                            </div>
                            <div class="text-white opacity-60 text-xs">
                                <i class="fas fa-clock mr-1"></i>
                                Last updated: Today, 14:30
                            </div>
                        </div> *@

                        <!-- Balance Actions -->
                        <div class="space-y-3">
                            <button class="w-full top-up-btn text-white py-2.5 px-4 rounded-xl font-semibold text-sm">
                                <a href="/HomeUser/TopUpSaldo"><i class="fas fa-plus mr-2"></i>Top Up</a>
                            </button>
                        </div>

                        <!-- Quick Balance Stats -->
                        <div class="grid grid-cols-2 gap-2 mt-4 pt-4 border-t border-white border-opacity-20">
                            <div class="text-center">
                                <div class="text-sm font-semibold text-green-300">+Rp 500K</div>
                                <div class="text-xs text-white opacity-60">This Month</div>
                            </div>
                            <div class="text-center">
                                <div class="text-sm font-semibold text-blue-300">12</div>
                                <div class="text-xs text-white opacity-60">Transactions</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side - Profile Form -->
            <div class="lg:col-span-2 slide-in-right">
                <div class="glass-effect p-6 lg:p-8 rounded-3xl shadow-2xl profile-container">

                    <!-- Header -->
                    <div class="text-center mb-6 fade-in-up">
                        <div class="text-3xl font-bold bg-gradient-to-r from-white to-indigo-200 bg-clip-text text-transparent mb-2 drop-shadow-2xl">
                            <i class="fas fa-user-circle mr-2 text-indigo-300"></i>My Profile
                        </div>
                        <p class="text-white font-medium drop-shadow-lg">Update your personal information</p>
                    </div>

                    <!-- Profile Form -->
                    <form class="space-y-4 fade-in-up" asp-action="MyProfile" asp-controller="HomeUser" method="post" enctype="multipart/form-data">

                        <!-- Profile Image Upload -->
                        <div class="text-center mb-6">
                            <label for="ImageFile" class="block text-white text-sm font-semibold mb-3 drop-shadow-lg">
                                <i class="fas fa-camera mr-1"></i>Profile Picture
                            </label>
                            <div class="file-input-wrapper bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-6 py-3 rounded-xl font-semibold mx-auto inline-block">
                                <input type="file" class="file-input" id="ImageFile" name="ImageFile" accept="image/*" />
                                <i class="fas fa-upload mr-2"></i>Choose Image
                            </div>
                            <p class="text-white opacity-70 text-xs mt-2">JPG, PNG or GIF (max 5MB)</p>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <!-- Name -->
                            <div>
                                <label class="block text-white text-sm font-semibold mb-1 drop-shadow-lg">
                                    <i class="fas fa-user mr-1"></i>Full Name
                                </label>
                                <input type="text"
                                       required
                                       asp-for="Name"
                                       id="name"
                                       name="name"
                                       class="w-full px-4 py-3 bg-gray-800 bg-opacity-80 border border-gray-600 rounded-xl text-white placeholder-gray-300 focus:outline-none focus:border-indigo-400 focus:bg-opacity-90 input-focus shadow-lg">
                            </div>

                            <!-- Username -->
                            <div>
                                <label class="block text-white text-sm font-semibold mb-1 drop-shadow-lg">
                                    <i class="fas fa-at mr-1"></i>Username
                                </label>
                                <input type="text"
                                       readonly
                                       asp-for="Username"
                                       id="username"
                                       name="username"
                                       class="w-full px-4 py-3 bg-gray-800 bg-opacity-80 border border-gray-600 rounded-xl text-white placeholder-gray-300 focus:outline-none focus:border-indigo-400 focus:bg-opacity-90 input-focus shadow-lg">
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <!-- Email -->
                            <div>
                                <label class="block text-white text-sm font-semibold mb-1 drop-shadow-lg">
                                    <i class="fas fa-envelope mr-1"></i>Email Address
                                </label>
                                <input type="email"
                                       required
                                       asp-for="Email"
                                       id="email"
                                       name="email"
                                       class="w-full px-4 py-3 bg-gray-800 bg-opacity-80 border border-gray-600 rounded-xl text-white placeholder-gray-300 focus:outline-none focus:border-indigo-400 focus:bg-opacity-90 input-focus shadow-lg">
                            </div>

                            <!-- Phone Number -->
                            <div>
                                <label class="block text-white text-sm font-semibold mb-1 drop-shadow-lg">
                                    <i class="fas fa-phone mr-1"></i>Phone Number
                                </label>
                                <input type="tel"
                                       id="phoneNumber"
                                       asp-for="PhoneNumber"
                                       name="phoneNumber"
                                       class="w-full px-4 py-3 bg-gray-800 bg-opacity-80 border border-gray-600 rounded-xl text-white placeholder-gray-300 focus:outline-none focus:border-indigo-400 focus:bg-opacity-90 input-focus shadow-lg">
                            </div>
                        </div>

                        <!-- Address -->
                        <div>
                            <label class="block text-white text-sm font-semibold mb-1 drop-shadow-lg">
                                <i class="fas fa-map-marker-alt mr-1"></i>Address
                            </label>
                            <textarea id="address"
                                      name="address"
                                      asp-for="Address"
                                      rows="3"
                                      class="w-full px-4 py-3 bg-gray-800 bg-opacity-80 border border-gray-600 rounded-xl text-white placeholder-gray-300 focus:outline-none focus:border-indigo-400 focus:bg-opacity-90 input-focus shadow-lg resize-none"
                                      placeholder="Enter your full address">123 Main Street, City, State 12345</textarea>
                        </div>

                        <!-- Date of Birth -->
                        <div>
                            <label class="block text-white text-sm font-semibold mb-1 drop-shadow-lg">
                                <i class="fas fa-calendar mr-1"></i>Date of Birth
                            </label>
                            <input type="date"
                                   id="dateOfBirth"
                                   asp-for="DateOfBirth"
                                   name="dateOfBirth"
                                   class="w-full px-4 py-3 bg-gray-800 bg-opacity-80 border border-gray-600 rounded-xl text-white focus:outline-none focus:border-indigo-400 focus:bg-opacity-90 input-focus shadow-lg">
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex flex-col sm:flex-row gap-4 mt-8">
                            <button type="submit"
                                    class="flex-1 bg-gradient-to-r from-indigo-700 to-purple-700 text-white py-3 rounded-xl font-bold btn-hover relative shadow-xl">
                                <span id="saveText">
                                    <i class="fas fa-save mr-2"></i>Save Changes
                                </span>
                                <div id="loadingSpinner" class="hidden">
                                    <i class="fas fa-spinner fa-spin mr-2"></i>Saving...
                                </div>
                            </button>
                        </div>
                    </form>

                    <!-- Additional Options -->
                    <div class="mt-8 pt-6 border-t border-white border-opacity-30 fade-in-up">
                        <div class="grid grid-cols-2 gap-4 text-center">
                            <button class="text-white font-medium hover:text-indigo-200 transition-colors">
                                <i class="fas fa-shield-alt text-lg mb-1 block text-green-400"></i>
                                <span class="text-sm drop-shadow-lg">Security</span>
                            </button>
                            <button class="text-white font-medium hover:text-indigo-200 transition-colors">
                                <i class="fas fa-download text-lg mb-1 block text-blue-400"></i>
                                <span class="text-sm drop-shadow-lg">Export Data</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Up Modal -->
    <div id="topUpModal" class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm flex items-center justify-center z-50 hidden">
        <div class="glass-effect p-6 rounded-3xl shadow-2xl w-full max-w-md mx-4 transform scale-90 transition-transform duration-300">
            <div class="text-center mb-6">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-green-400 to-green-600 rounded-full mb-3">
                    <i class="fas fa-plus text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-white mb-2">Top Up Balance</h3>
                <p class="text-white opacity-70 text-sm">Withdraw funds from your wallet</p>
            </div>


        </div>
    </div>


    <!-- Success/Error Messages -->
    <div id="messageContainer" class="fixed top-4 right-4 z-50"></div>

    <script>
        let currentBalance = 2450000;

        // Password Toggle
        const togglePassword = document.getElementById('togglePassword');
        const password = document.getElementById('password');
        const eyeIcon = document.getElementById('eyeIcon');

        if (togglePassword && password && eyeIcon) {
            togglePassword.addEventListener('click', function() {
                const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                password.setAttribute('type', type);
                eyeIcon.className = type === 'password' ? 'fas fa-eye' : 'fas fa-eye-slash';
            });
        }




        // Message System
        function showMessage(message, type) {
            const messageContainer = document.getElementById('messageContainer');
            if (!messageContainer) return;

            const messageDiv = document.createElement('div');

            let bgColor, icon;
            switch(type) {
                case 'success':
                    bgColor = 'bg-green-500';
                    icon = 'fas fa-check-circle';
                    break;
                case 'error':
                    bgColor = 'bg-red-500';
                    icon = 'fas fa-exclamation-circle';
                    break;
                case 'info':
                    bgColor = 'bg-blue-500';
                    icon = 'fas fa-info-circle';
                    break;
                default:
                    bgColor = 'bg-gray-500';
                    icon = 'fas fa-bell';
            }

            messageDiv.className = `${bgColor} text-white px-6 py-3 rounded-lg shadow-lg mb-4 transform translate-x-full transition-transform duration-300`;
            messageDiv.innerHTML = `
                <div class="flex items-center">
                    <i class="${icon} mr-2"></i>
                    <span>${message}</span>
                </div>
            `;

            messageContainer.appendChild(messageDiv);

            // Slide in
            setTimeout(() => {
                messageDiv.style.transform = 'translateX(0)';
            }, 100);

            // Slide out and remove
            setTimeout(() => {
                messageDiv.style.transform = 'translateX(100%)';
                setTimeout(() => {
                    if (messageContainer.contains(messageDiv)) {
                        messageContainer.removeChild(messageDiv);
                    }
                }, 300);
            }, 4000);
        }

        // Smooth scroll effect for inputs
        document.querySelectorAll('input, textarea').forEach(input => {
            input.addEventListener('focus', function() {
                if (this.parentElement) {
                    this.parentElement.style.transform = 'translateY(-2px)';
                }
            });

            input.addEventListener('blur', function() {
                if (this.parentElement) {
                    this.parentElement.style.transform = 'translateY(0)';
            });
        });

        // Add pulse effect to floating elements
        document.querySelectorAll('.float-animation').forEach((element, index) => {
            element.addEventListener('mouseenter', function() {
                this.style.animation = 'none';
                this.style.transform = 'scale(1.2)';
                this.style.transition = 'all 0.3s ease';
            });

            element.addEventListener('mouseleave', function() {
                this.style.animation = `float 6s ease-in-out infinite`;
                this.style.animationDelay = `${-2 * index}s`;
                this.style.transform = 'scale(1)';
            });
        });

        // File input functionality
        document.getElementById('ImageFile').addEventListener('change', function(e) {
            const fileName = e.target.files[0]?.name;
            if (fileName) {
                showMessage('Image selected: ' + fileName, 'info');
            }
        });

    </script>
</body>
